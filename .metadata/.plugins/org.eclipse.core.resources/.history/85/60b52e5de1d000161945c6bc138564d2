		// [0]-> velocidad
		// [1]-> X o Y
		// {Vx=0,Vy=0}
		switch(movimiento){
		//ARRIBA-PRESSED
		case 1:
		
		break;
		//ABAJO-PRESSED
		case 2:
			
		break;
		//DERECHA-PRESSED
		case 3:
		velocidades[0]=Math.abs(c.);
		break;
		//IZQUIERDA-PRESSED
		case 4:
			
		break;
		
		default:
			
		break;
		}
		
	}
}
